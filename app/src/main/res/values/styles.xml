<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="drawableSize">40dp</item>
        <item name="spinBars">true</item>
        <item name="color">@color/icons</item>
    </style>

    <style name="ActionButtonOverflowStyle" parent="Widget.AppCompat.ActionButton.Overflow"></style>

    <style name="ToolbarStyle">
        <item name="android:textColorPrimary">@color/icons</item>
        <item name="android:textColorSecondary">@color/icons</item>
        <item name="android:editTextColor">@color/icons</item>
        <item name="android:textColorHint">@color/icons</item>
        <item name="actionMenuTextColor">@color/icons</item>
        <item name="actionOverflowButtonStyle">@style/ActionButtonOverflowStyle</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <!-- Home -->
    <style name="HomeHeader" parent="TextAppearance.AppCompat.Headline">
        <item name="android:gravity">left</item>
        <item name="android:textSize">22dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="FavouriteCard" parent="TextAppearance.AppCompat.Headline">
        <item name="android:gravity">left</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="NearbyStopName" parent="TextAppearance.AppCompat.Headline">
        <item name="android:gravity">left</item>
        <item name="android:textSize">16dp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="NearbyStopDistance">
        <item name="android:gravity">left</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Stops and routes -->
    <style name="StopsAndRoutesItem" parent="TextAppearance.AppCompat.Headline">
        <item name="android:gravity">left</item>
        <item name="android:textSize">22dp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="StopsAndRoutesDistance">
        <item name="android:gravity">left</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="StopsAndRoutesHeader" parent="TextAppearance.AppCompat.Headline">
        <item name="android:gravity">left</item>
        <item name="android:textSize">26dp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/primary</item>
    </style>

    <!-- Route variants -->
    <style name="RouteCardTextStyle" parent="TextAppearance.AppCompat.Display1">
        <item name="android:gravity">left</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <!-- Timetable -->
    <style name="TimeTableItem" parent="TextAppearance.AppCompat.Headline">
        <item name="android:gravity">center</item>
        <item name="android:textSize">24dp</item>
        <item name="android:layout_height">@dimen/TimeTableRowHeight</item>
        <item name="android:layout_width">@dimen/TimeTableColumnWidth</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="TimeTableLeftMostItem" parent="TimeTableItem">
        <item name="android:textStyle">normal</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/accent</item>
    </style>

    <style name="TimeTableHeader" parent="TextAppearance.AppCompat.Headline">
        <item name="android:gravity">left</item>
        <item name="android:textSize">32dp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="TimeTableAdditionalInfo" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:gravity">left</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <!-- Others -->
    <style name="ErrorViewTextView" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">22dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">8dp</item>
    </style>


</resources>
