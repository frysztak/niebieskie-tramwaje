<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.orpington.software.rozkladmpk">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".RozkladMPK"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".stopsAndRoutes.StopsAndRoutesActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".routeVariants.RouteVariantsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".routeDetails.RouteDetailsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".stopsForRoute.StopsForRouteActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>